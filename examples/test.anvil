/* Example program for testing */

chan pack {
    out ping : (logic[10]@#1-#2) -> (logic[10]@#1-#2)
}

proc slave(p : right pack)
/* channel defs */
{}
/* spawns */
{}
/* regs */
{ st: logic }
/* refs */
{ tmp: logic @ #3 - #3 }
/* body */
{
    /*recv d = p::ping => return p::ping d + 10'b1 done*/
    => st := let v = try_recv d = p::ping then 1'b1 else 1'b0 in
        if v >= 1'b0 then 1'b1 else 1'b0 // testing if-then-else
}

proc master(p : left pack)
/* channel defs */
{}
/* spawns */
{}
/* regs */
{
    counter: logic[10]
}
/* refs */
{
    d_val : logic[10] @ #1 - #2
}
/* body */
{
    => let a = 10'b1 in
        counter := counter + a;
    if send d = p::ping(counter) =>
        /*let _ = counter := counter + d in */
        let _ = ref d_val = d done in
        1'b0
    {
        => counter := counter + (2'd1 << 2'd3)
    } else {
        => counter := ~(counter + 2'b10)
    }
}

proc top()
/* channel defs */
{
    foreign master_p -> foreign slave_p : pack
}
/* spawns */
{
    master(master_p),
    slave(slave_p)
}
/* regs */
{}
/* refs */
{}
/* body */
{}
